<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!-- 字符编码配置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.d</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:config/spring.xml</param-value>
	</context-param>
    <filter>
        <filter-name>AccessControl</filter-name>
        <filter-class>cn.com.atblue.common.filter.AccessControl</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessControl</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AccessControl</filter-name>
        <url-pattern>*.d</url-pattern>
    </filter-mapping>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				struts-default.xml,struts-plugin.xml,config/struts.xml
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/struts/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.d</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
		<servlet>
		<servlet-name>OfficeFile</servlet-name>
		<servlet-class>cn.com.atblue.common.servlet.OfficeDown</servlet-class>	
	</servlet>
		<servlet-mapping>
		<servlet-name>OfficeFile</servlet-name>
		<url-pattern>/officeFileDownload</url-pattern>
	</servlet-mapping>
    <servlet>
        <servlet-name>sealDown</servlet-name>
        <servlet-class>cn.com.atblue.common.servlet.SealDownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sealDown</servlet-name>
        <url-pattern>/servlet/sealDown</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>XiorkFlowWorkSpace</servlet-name>
        <servlet-class>
            cn.com.atblue.common.servlet.XiorkFlowWorkSpace
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>XiorkFlowWorkSpace</servlet-name>
        <url-pattern>
            /js/XiorkFlow/XiorkFlowWorkSpace.js
        </url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
