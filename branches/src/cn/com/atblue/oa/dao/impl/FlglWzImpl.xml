    <typeAlias alias="FlglWz" type="cn.com.atblue.oa.bean.FlglWz"/>

    <sql id="dynamicRuleSql">
        <dynamic prepend="where">
            <isNotEmpty prepend=" and " property="lbbm">
                <![CDATA[lbbm=#lbbm#]]>
            </isNotEmpty>
            <isNotEmpty prepend=" and " property="lbmc">
                <![CDATA[lbmc=#lbmc#]]>
            </isNotEmpty>
            <isNotEmpty prepend=" and " property="lbms">
                <![CDATA[lbms=#lbms#]]>
            </isNotEmpty>
            <isNotEmpty prepend=" and " property="px">
                <![CDATA[px=#px#]]>
            </isNotEmpty>
        </dynamic>
    </sql>
    <insert id="addFlglWz" parameterClass="FlglWz">
        <![CDATA[
            insert into flgl_wz(
                lbbm,lbmc,lbms,px
            ) values(
                #lbbm#,#lbmc#,#lbms#,#px#
            )
        ]]>
    </insert>

    <update id="modFlglWz" parameterClass="FlglWz">
        <![CDATA[
            update flgl_wz
            set lbbm=#lbbm#,lbmc=#lbmc#,lbms=#lbms#,
				px=#px#
            where LBBM=#lbbm#
        ]]>
    </update>

    <delete id="delFlglWz" parameterClass="java.util.HashMap">
        <![CDATA[
            delete from flgl_wz
            where LBBM=#lbbm#
        ]]>
    </delete>

    <select id="queryForBean" parameterClass="java.util.HashMap" resultClass="FlglWz">
        <![CDATA[
            select lbbm as lbbm,lbmc as lbmc,lbms as lbms,px as px from flgl_wz where LBBM=#lbbm#
        ]]>
    </select>

    <select id="queryForList" parameterClass="java.util.HashMap" resultClass="FlglWz">
